{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 1,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffff66",
          "template": ""
        },
        {
          "foreground": "#546E7A",
          "style": "plain",
          "type": "root",
          "template": "\uf460"
        },
        {
          "foreground": "#26C6DA",
          "properties": {
            "folder_icon": "<#546E7A>\u2026</>",
            "folder_separator_icon": "<#546E7A>/</>",
            "style": "agnoster_short",
            "max_depth": 1,
            "mapped_locations_enabled": true,
            "mapped_locations": {
              "~": "\uf07c  ~",
              "D:/": "\uf07c  D:",
              "C:/": "\uf07c  C:"
            }
          },
          "style": "plain",
          "template": " {{ .Path }}",
          "type": "path"
        },
        {
          "type": "git",
          "style": "plain",
          "template": "\uf460 ",
          "foreground": "#546E7A"
        },
        {
          "foreground": "#696969",
          "foreground_templates": [
            "{{ if .Working.Changed }}#ffff00{{ end }}",
            "{{ if .Staging.Changed }}#3cb371{{end}}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff0000{{ end }}",
            "{{ if gt .Ahead 0 }}#9400d3{{ end }}",
            "{{ if gt .Behind 0 }}#1e90ff{{ end }}"
          ],
          "properties": {
            "branch_ahead_icon": "\uf176",
            "branch_behind_icon": "\uf175",
            "branch_icon": "󰘬 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }}",
          "type": "git"
        },
        {
          "foreground": "#696969",
          "min_width": 62,
          "foreground_templates": [
            "{{ if .Working.Changed }}#ffff00{{ end }}",
            "{{ if .Staging.Changed }}#3cb371{{end}}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff0000{{ end }}",
            "{{ if gt .Ahead 0 }}#9400d3{{ end }}",
            "{{ if gt .Behind 0 }}#1e90ff{{ end }}"
          ],
          "properties": {
            "branch_ahead_icon": "\uf176",
            "branch_behind_icon": "\uf175",
            "branch_icon": "󰘬 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "{{ .HEAD }}",
          "type": "git"
        },
        {
          "foreground": "#696969",
          "foreground_templates": [
            "{{ if .Working.Changed }}#ffff00{{ end }}",
            "{{ if .Staging.Changed }}#3cb371{{end}}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff0000{{ end }}",
            "{{ if gt .Ahead 0 }}#9400d3{{ end }}",
            "{{ if gt .Behind 0 }}#1e90ff{{ end }}"
          ],
          "properties": {
            "branch_ahead_icon": "\uf176",
            "branch_behind_icon": "\uf175",
            "branch_icon": "󰘬 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf0c7 {{ .StashCount }}{{ end }}",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#00ff00",
          "foreground_templates": [
            "{{ if .Error}}#e91e63{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "display_exit_code": true
          },
          "style": "plain",
          "template": "{{ if .Error }}{{ .String }} \uf40c{{ else }}\uf00c{{ end }}",
          "type": "status"
        },
        {
          "foreground": "#546E7A",
          "style": "plain",
          "type": "text",
          "template": " \u2039"
        },
        {
          "foreground": "#ffff00",
          "properties": {
            "display_mode": "context"
          },
          "style": "plain",
          "template": " {{ if .Venv }}{{ .Venv }}{{ end }}",
          "type": "python",
          "min_width": 62
        },
        {
          "foreground": "#ffff00",
          "properties": {
            "display_mode": "context"
          },
          "style": "plain",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "python"
        },
        {
          "foreground": "#0068b7",
          "properties": {
            "display_mode": "context"
          },
          "style": "plain",
          "type": "python",
          "template": " \ue73c"
        },
        {
          "foreground": "#546E7A",
          "properties": {
            "display_mode": "context"
          },
          "style": "plain",
          "type": "python",
          "template": " \u2039"
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "#ffeb3b",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Percentage }}󰏰{{ .Icon }}{{ end }} ",
          "properties": {
            "discharging_icon": " ",
            "charging_icon": " ",
            "charged_icon": " "
          }
        },
        {
          "foreground": "#546E7A",
          "style": "plain",
          "type": "battery",
          "template": "\u2039"
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#cdcdcd",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "\udb82\ude0a",
              "cmd": "\uebc4",
              "bash": "\udb84\udd83"
            }
          }
        },
        {
          "foreground": "#546E7A",
          "style": "plain",
          "type": "text",
          "template": "\u2039"
        },
        {
          "foreground": "#00bfff",
          "properties": {
            "ubuntu": "\uf31b",
            "windows": "\ue70f"
          },
          "style": "plain",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        }
      ],
      "type": "prompt",
      "overflow": "hide"
    },
    {
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c0c0c0",
          "style": "plain",
          "template": " \uf101 ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#c0c0c0",
    "template": " \uf101 "
  },
  "valid_line": {
      "background": "transparent",
      "foreground": "#00ff00",
      "template": "\uf42e "
  },
  "error_line": {
      "background": "transparent",
      "foreground": "#e91e63",
      "template": "\ue009 "
  },
  "version": 2
}
