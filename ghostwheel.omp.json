                    "style": "plain",
                    "foreground": "#D4E157",
                    "properties": {
                        "root_icon": "\uF0E7"
                    }
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "#ffff00",
                    "properties": {
                        "postfix": " <#546E7A>Ôºú</>",
                        "prefix": " <#0068b7>Python</> ",
