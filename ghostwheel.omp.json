{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "properties": {
                        "style": "agnoster",
                        "folder_separator_icon": "<#546E7A>/</>",
                        "folder_icon": "<#546E7A>‚Ä¶</>",
                        "prefix": " <#4169e1>üìÅ</> "
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#696969",
                    "properties": {
                        "color_background": false,
                        "prefix": "<#546E7A>Ôºû</> ",
                        "branch_icon": "<#ff6347>git</> ",
                        "branch_ahead_icon":"‚è´",
                        "branch_behind_icon": "‚è¨",
                        "display_stash_count": true,
                        "status_colors_enabled": true,
                        "local_working_icon": " üìù",
                        "local_staged_icon": " ‚úî",
                        "stash_count_icon": " üì• ",
