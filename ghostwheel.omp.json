{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 1,
      "segments": [
        {
          "foreground": "#26C6DA",
          "properties": {
            "folder_icon": "<#546E7A>\u2026</>",
            "folder_separator_icon": "<#546E7A>/</>",
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#696969",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffff00{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff0000{{ end }}",
            "{{ if gt .Ahead 0 }}#9400d3{{ end }}",
            "{{ if gt .Behind 0 }}#1e90ff{{ end }}"
          ],
          "properties": {
            "branch_ahead_icon": "\u23eb",
            "branch_behind_icon": "\u23ec",
            "branch_icon": "<#ff6347>git</> ",
            "fetch_stash_count": true
          },
          "style": "plain",
          "template": "<#546E7A>\u203a</> {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} +<#ffff00>{{ .Working.String }}</>{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \u2705<#3cb371>{{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0}} \uff33 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "newline"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c0c0c0",
          "style": "plain",
          "template": " \u300b ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
