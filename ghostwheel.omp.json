{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 1,
      "segments": [
        {
          "foreground": "#26C6DA",
          "properties": {
            "folder_icon": "<#546E7A>\u2026</>",
            "folder_separator_icon": "<#546E7A>/</>",
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#696969",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffff00{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff0000{{ end }}",
            "{{ if gt .Ahead 0 }}#9400d3{{ end }}",
            "{{ if gt .Behind 0 }}#1e90ff{{ end }}"
          ],
          "properties": {
            "branch_ahead_icon": "\u23eb",
            "branch_behind_icon": "\u23ec",
            "branch_icon": "<#ff6347>git</> ",
            "fetch_stash_count": true
          },
          "style": "plain",
          "template": "<#546E7A>\u203a</> {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} +<#ffff00>{{ .Working.String }}</>{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \u2705<#3cb371>{{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0}} \uff33 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#00ff00",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#e91e63{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "display_exit_code": true
          },
          "style": "plain",
          "template": " {{ if gt .Code 0 }}\u274c {{ .Meaning }}{{ else }}\u2705{{ end }} <#546E7A> \u2039</>",
          "type": "exit"
        },
        {
          "foreground": "#ffff00",
          "properties": {
            "display_mode": "context"
          },
          "style": "plain",
          "template": " <#0068b7>Python</> {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }}<#546E7A> \u2039</>",
          "type": "python"
        },
        {
          "foreground": "#00bfff",
          "properties": {
            "ubuntu": "Ubuntu",
            "windows": "Win"
          },
          "style": "plain",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "newline"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c0c0c0",
          "style": "plain",
          "template": " \u300b ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
